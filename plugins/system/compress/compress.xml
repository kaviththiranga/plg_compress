<?xml version="1.0" encoding="utf-8"?>
<install version="2.5" type="plugin" group="system">
    <name>plg_system_compress</name>
    <author>Joomla! Project</author>
    <creationDate>August 2012</creationDate>
    <copyright>Copyright (C) 2005 - 2012 Open Source Matters. All rights reserved.</copyright>
    <license>GNU General Public License version 2 or later; see LICENSE.txt</license>
    <authorEmail>admin@joomla.org</authorEmail>
    <authorUrl>www.joomla.org</authorUrl>
    <version>2.5.0</version>
    <description>PLG_COMPRESS_XML_DESCRIPTION</description>
    <files>
        <filename plugin="compress">compress.php</filename>
        <filename>index.html</filename>
        <folder>language</folder>
    </files>
    <languages>
        <language tag="en-GB">en-GB.plg_system_compress.ini</language>
        <language tag="en-GB">en-GB.plg_system_compress.sys.ini</language>
    </languages>
    <config>
        <fields name="params">

            <fieldset name="compressionFS" label="PLG_COMPRESS_FIELDSET_COMPRESSIONFS_LABEL">
                <field	name="jscompression" type="radio"
                          default="0"
                          description="PLG_COMPRESS_FIELD_JSCOMPRESSION_DESC"
                          label="PLG_COMPRESS_FIELD_JSCOMPRESSION_LABEL"
                        >
                    <option
                            value="0">JNo</option>
                    <option
                            value="1">JYes</option>
                </field>
                <field	name="csscompression" type="radio"
                          default="0"
                          description="PLG_COMPRESS_FIELD_CSSCOMPRESSION_DESC"
                          label="PLG_COMPRESS_FIELD_CSSCOMPRESSION_LABEL"
                        >
                    <option
                            value="0">JNo</option>
                    <option
                            value="1">JYes</option>
                </field>
                <field name="compressoptions" type="textarea"
                       default="REMOVE_COMMENTS=true; MIN_COLOR_CODES=true; LIMIT_LINE_LENGTH=true;"
                       description="PLG_COMPRESS_FIELD_COMPRESSOPTIONS_DESC"
                       label="PLG_COMPRESS_FIELD_COMPRESSOPTIONS_LABEL"
                       cols="40"
                       rows="5"
                        />
                <field name="compresssavepath" type="text"
                       default=""
                       description="PLG_COMPRESS_FIELD_COMPRESSIONPATH_DESC"
                       label="PLG_COMPRESS_FIELD_COMPRESSIONPATH_LABEL"
                       size="70"
                        />
            </fieldset>

            <fieldset name="combiningFS" label="PLG_COMPRESS_FIELDSET_COMBININGFS_LABEL">
                <field	name="combinejs" type="radio"
                          default="0"
                          description="PLG_COMPRESS_FIELD_JSCOMBINING_DESC"
                          label="PLG_COMPRESS_FIELD_JSCOMBINING_LABEL"
                        >
                    <option
                            value="0">JNo</option>
                    <option
                            value="1">JYes</option>
                </field>
                <field	name="combinecss" type="radio"
                          default="0"
                          description="PLG_COMPRESS_FIELD_CSSCOMBINING_DESC"
                          label="PLG_COMPRESS_FIELD_CSSCOMBINING_LABEL"
                        >
                    <option
                            value="0">JNo</option>
                    <option
                            value="1">JYes</option>
                </field>
                <field name="combineoptions" type="textarea"
                       default="FILE_COMMENTS = true;"
                       description="PLG_COMPRESS_FIELD_COMBINEOPTIONS_DESC"
                       label="PLG_COMPRESS_FIELD_COMBINEOPTIONS_LABEL"
                       cols="40"
                       rows="5"
                        />
                <field name="combinesavepath" type="text"
                       default=""
                       description="PLG_COMPRESS_FIELD_COMPRESSIONPATH_DESC"
                       label="PLG_COMPRESS_FIELD_COMPRESSIONPATH_LABEL"
                       size="70"
                        />
            </fieldset>

            <fieldset name="cacheFS" label="PLG_COMPRESS_FIELDSET_CACHEFS_LABEL">
                <field	name="compresscache" type="radio"
                          default="0"
                          description="PLG_COMPRESS_FIELD_COMPRESSCACHE_DESC"
                          label="PLG_COMPRESS_FIELD_COMPRESSCACHE_LABEL"
                        >
                    <option
                            value="0">JNo</option>
                    <option
                            value="1">JYes</option>
                </field>
                <field	name="combinecache" type="radio"
                          default="0"
                          description="PLG_COMPRESS_FIELD_COMBINECACHE_DESC"
                          label="PLG_COMPRESS_FIELD_COMBINECACHE_LABEL"
                        >
                    <option
                            value="0">JNo</option>
                    <option
                            value="1">JYes</option>
                </field>
                <field name="cachesavepath" type="text"
                       default=""
                       description="PLG_COMPRESS_FIELD_CACHEPATH_DESC"
                       label="PLG_COMPRESS_FIELD_CACHEPATH_LABEL"
                       size="70"
                        />
            </fieldset>


        </fields>
    </config>
</install>
